# LogicMonitor MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Your LogicMonitor portal hostname
LM_PORTAL=yourcompany.logicmonitor.com

# Required: Bearer token for authentication
LM_BEARER_TOKEN=your_bearer_token

# Optional settings
LM_API_VERSION=3
LM_TIMEOUT=30
LM_ENABLE_WRITE_OPERATIONS=false
LM_MAX_RETRIES=3

# Ansible Automation Platform (optional — AAP tools excluded if not set)
# AWX_URL=https://aap.example.com
# AWX_TOKEN=your_aap_personal_access_token
# AWX_VERIFY_SSL=true

# EDA Controller (optional — EDA tools excluded if not set)
# EDA_URL=https://eda.example.com
# EDA_TOKEN=your_eda_personal_access_token
# EDA_VERIFY_SSL=true
