# LogicMonitor MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Your LogicMonitor portal hostname
LM_PORTAL=yourcompany.logicmonitor.com

# Authentication method: "lmv1" or "bearer"
LM_AUTH_METHOD=lmv1

# For LMv1 authentication (required if LM_AUTH_METHOD=lmv1)
LM_ACCESS_ID=your_access_id
LM_ACCESS_KEY=your_access_key

# For Bearer token authentication (required if LM_AUTH_METHOD=bearer)
LM_BEARER_TOKEN=your_bearer_token

# Optional settings
LM_API_VERSION=3
LM_TIMEOUT=30
